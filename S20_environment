#!/usr/bin/env zsh


# default editor
export EDITOR=vim

export PATH="${HOME}/opt/bin:${PATH}"
export PATH="${HOME}/bin:${PATH}"
export PATH="${PATH}:/usr/sbin"

# fix ssh sign useing the key
# https://bugs.launchpad.net/ubuntu/+source/openssh/+bug/201786
export SSH_AUTH_SOCK=0

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
     precmd () {print -Pn "\e]0;%n@%m: %~\a"}
        ;;
esac

autoload colors 
colors
autoload -U compinit
compinit

# colorful man page
export PAGER="`which less` -s"
export BROWSER="$PAGER"
export LESS_TERMCAP_mb=$'\E[38;5;167m'
export LESS_TERMCAP_md=$'\E[38;5;39m'
export LESS_TERMCAP_me=$'\E[38;5;231m'
export LESS_TERMCAP_se=$'\E[38;5;231m'
export LESS_TERMCAP_so=$'\E[38;5;167m'
export LESS_TERMCAP_ue=$'\E[38;5;231m'
export LESS_TERMCAP_us=$'\E[38;5;167m'

# ibus
# may be this line should put to /etc/profile
export IBUS_NO_SNOOPER_APPS="synapse,kupfer"

# disable capslock
xmodmap -e 'clear lock'

umask 002
